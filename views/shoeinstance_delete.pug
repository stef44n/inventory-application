extends layout

block content

  h1= title

  p #[strong Do you really want to delete this ShoeInstance?]

  div(style="margin-left:20px")

    p #[strong ID]: #{shoeinstance._id}

    p #[strong Name:] 
      a(href=shoeinstance.shoe.url) #{shoeinstance.shoe.name}

    p #[strong Color:] #{shoeinstance.color}

    p #[strong Size:] #{shoeinstance.size}
    

  form(method='POST' action='')
    div.form-group
      input#id.form-control(type='hidden',name='id', required='true', value=shoeinstance._id )

    button.btn.btn-primary(type='submit') Delete