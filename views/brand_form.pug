extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') First Name:
      input#name.form-control(type='text' placeholder='Brand name' name='name' required='true' value=(undefined===brand ? '' : brand.name) )
      label(for='country') Country:
      input#country.form-control(type='text' placeholder='Family name' name='country' required='true' value=(undefined===brand ? '' : brand.country))
    div.form-group
      label(for='established') Established:
      input#established.form-control(type='date' name='established' value=(undefined===brand ? '' : brand.established) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
