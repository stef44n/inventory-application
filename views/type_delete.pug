extends layout

block content

  h1 Delete Type: #{type.name}

  if type_shoes.length

    p #[strong Delete the following shoes before attempting to delete this type.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Shoes

      dl
      each shoe in type_shoes
        dt
          a(href=shoe.url) #{shoe.name}
        dd #{shoe.description}

  else
    p Do you really want to delete this Type?

    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=type._id )

      button.btn.btn-primary(type='submit') Delete