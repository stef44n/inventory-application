extends layout

block content

  h1 ID: #{shoeinstance._id}

  p #[strong Model:] 
    a(href=shoeinstance.shoe.url) #{shoeinstance.shoe.name}
  p #[strong Color:] #{shoeinstance.color}

  p #[strong Price:] 
      span $#{shoeinstance.shoe.price}

  if shoeinstance.status!='Available'
    p #[strong Size:] #{shoeinstance.size}

  hr
  p
    a(href=shoeinstance.url+'/delete') Delete ShoeInstance
  p
    a(href=shoeinstance.url+'/update') Update ShoeInstance