extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Type:
      input#name.form-control(type='text', placeholder='Dress, Chelsea, Boat...' name='name' value=(undefined===type ? '' : type.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
